<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profilePage"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/textured_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/profilePictureAndAbout"
            android:orientation="horizontal"
            android:background="@drawable/top_corner_radius_bg">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"

                android:layout_marginTop="20dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/userAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Brief Description."
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:textStyle="italic" />

            </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_corner_radius_bg"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/userMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mail"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="10dp"
            />
        <TextView
            android:id="@+id/userNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/userLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/userStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_work"
            android:drawablePadding="10dp"/>

    </LinearLayout>

</LinearLayout>
